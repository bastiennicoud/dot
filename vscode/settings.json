{
    "workbench.startupEditor": "none",
    "editor.fontFamily": "Cartograph CF",
    "editor.fontWeight": "400",
    "editor.fontSize": 17,
    "editor.lineHeight": 24,
    "editor.fontLigatures": true,
    "workbench.iconTheme": "material-icon-theme",
    "files.autoSave": "onFocusChange",
    "editor.tabSize": 2,
    "editor.renderWhitespace": "boundary",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.confirmSync": false,
    "editor.minimap.enabled": false,
    "terminal.integrated.shell.osx": "fish",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "window.zoomLevel": 0,
    "terminal.integrated.fontSize": 14,
    "git.enableCommitSigning": true,
    "workbench.fontAliasing": "antialiased",
    "eslint.alwaysShowStatus": true,
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "oracledevtools.bookmarkFileFolder": "/Users/bastien/Oracle/oracle.oracledevtools",
    "oracledevtools.connectionConfiguration.configFilesFolder": "/Users/bastien/Oracle/network/admin",
    "oracledevtools.connectionConfiguration.walletFileFolder": "/Users/bastien/Oracle/network/admin",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.semanticHighlighting.enabled": false,
    "editor.rulers": [
        80,
        100
    ],
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // Auto swith theme based on OS settings
    "window.autoDetectColorScheme": true,
    "workbench.preferredLightColorTheme": "Night Owl Light",
    "workbench.preferredDarkColorTheme": "Tokyo Night",
    "workbench.colorTheme": "Tokyo Night",
    "editor.tokenColorCustomizations": {
        "[Tokyo Night]": { // or "[Tokyo Night Storm]"
            "comments": "#7982a9", // Preferred hex color
        }
    },
}
